import random

circuits = ['Bahrain', 'China', 'Portugal', 'Spain', 'Monaco', 'Azerbaijan', 'Canada', 'France', 'Austria', 'Britain', 'Hungary',
            'Belgium', 'Netherlands', 'Italy: Monza', 'Russia', 'Singapore', 'Japan', 'USA', 'Mexico', 'Brazil', 'Australia', 'Abu Dhabi',
            'Italy: Imola']

gp = []

for circuit in circuits:
    gp.append(f'{circuit}')

print(f'There are {len(gp)} tracks to choose from.\n')

input("Press 'Enter' when ready to continue. ")

track1 = []
while len(track1) < 1:
    circuit = random.choice(gp)
    gp.remove(circuit)
    track1.append(circuit)

print(f'\n{track1} has been chosen as the opening Grand Prix.\n')
print(f'There are {len(gp)} tracks remaining to choose from.')

#############Track 2#############

input("Press 'Enter' when ready to continue. ")

track2 = []
while len(track2) < 1:
    circuit = random.choice(gp)
    gp.remove(circuit)
    track2.append(circuit)

print(f'\n{track2} has been chosen as the second Grand Prix on the calendar.\n')
print(f'There are {len(gp)} tracks remaining to choose from.')

